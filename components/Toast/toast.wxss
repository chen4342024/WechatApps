
.toast{
  background: red;
}

.custom-toast-content {
  background: #333;
  border-radius: 16rpx;
  color: #fff; 
  position: fixed;
  left: 50%;
  padding: 20rpx 20rpx;
  transform: translate(-50%, -50%);
  font-size: 30rpx;
  z-index: 1000;
  opacity: 0.9;
  box-shadow: 0px 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.50);
  display: none;
}

.custom-toast-content.center {
  top: 50%;
  display: block;
}

.custom-toast-content.bottom {
  top: 70%;
  display: block;
}

.custom-toast-mask {
  background: #fff;
  opacity: 0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
