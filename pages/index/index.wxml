<!--index.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='panel'>
      <view class='form-item'>
        <label>
          <text class='form-label'>姓名</text>
          <input class='form-control' placeholder="请输入姓名" 
          value='{{name}}' data-name="name" bindinput="bindInputChange"></input>
        </label>
      </view>
      <view class='form-item'>
        <label>
          <text class='form-label'>身份证</text>
          <input class='form-control' placeholder="请输入身份证号码" 
            value='{{card_number}}' data-name='card_number' bindinput="bindInputChange"></input>
        </label>
      </view>
      <view class='form-item'>
        <label>
          <text class='form-label'>工作单位</text>
          <input class='form-control' placeholder="请填写工作单位信息" 
            value='{{address}}' data-name='address' bindinput="bindInputChange"></input>
        </label>
      </view>
      <view class='form-item '>
        <label class='no-bottom-border'>
          <text class='form-label'>联系方式</text>  
          <input class='form-control' placeholder="请输入手机号码" 
            value='{{phone}}' data-name='phone' bindinput="bindInputChange"></input>
        </label>
      </view>
    </view>
    <view class='panel'>
      <view class='form-item'>
        <picker bindchange="bindPickerChange" data-index='houseTypesIndex' value="{{houseTypesIndex}}" range="{{houseTypes}}" range-key='text'>
          <view class='form-picker-wrap'>
            <text class='form-label'>房产信息</text>
            <text class='form-control'>{{ houseTypes[houseTypesIndex].label || houseTypes[houseTypesIndex].text}} </text>
          </view>
        </picker>
      </view>
      <view class='upload-container'>
        <view class='upload-item' wx:for="{{pics}}" data-item="{{item}}">
          <image mode="aspectFill" src="{{item}}"></image>
        </view>
        <view class='upload-item upload-item-add' bindtap='uploadImage'></view>
      </view>
    </view>
    <view class='panel'>
       <view class='form-item'>
        <picker bindchange="bindPickerChange" data-index="policyTypesIndex" value="{{policyTypesIndex}}" range="{{policyTypes}}" range-key="text" >
          <view class='form-picker-wrap'>
            <text class='form-label'>保单信息</text>
            <text class='form-control'>{{ policyTypes[policyTypesIndex].label || policyTypes[policyTypesIndex].text}}</text>
          </view>
        </picker>
      </view> 
      <view class='upload-container'>
        <view class='upload-item'>
          <image mode="aspectFill" src="{{testImg}}"></image>
        </view>
        <view class='upload-item upload-item-add'></view>
      </view>
    </view>
    <view class='panel'>
       <view class='form-item'>
        <picker bindchange="bindPickerChange" data-index="carTypesIndex" value="{{carTypesIndex}}" range="{{carTypes}}" range-key='text'>
          <view class='form-picker-wrap'>
            <text class='form-label'>车</text>
            <text class='form-control'>{{ carTypes[carTypesIndex].label || carTypes[carTypesIndex].text}} 
            </text>
          </view>
        </picker>
      </view> 
      <view class='upload-container'>
        <view class='upload-item'>
          <image mode="aspectFill" src="{{testImg}}"></image>
        </view>
        <view class='upload-item'>
          <image mode="aspectFill" src="{{testImg}}"></image>
        </view>
        <view class='upload-item'>
          <image mode="aspectFill" src="{{testImg}}"></image>
        </view>
        <view class='upload-item'>
          <image mode="aspectFill" src="{{testImg}}"></image>
        </view>
        <view class='upload-item upload-item-add'></view>
      </view>
    </view>
    <button class='submit-btn' type="primary" loading="{{false}}" bindtap="onSubmit"> 提交 </button>
  </form>
</view>