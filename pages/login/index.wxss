@import '../../wxss/font.wxss';

page {
  height: 100%;
}

.container {
  background: #2f4159;
  width: 100%;
  height: 100%;
  padding-top: 150rpx;
}

.logo {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  padding-bottom: 100rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.form-item {
  color: #fff;
  width: 540rpx;
  margin: 0 auto;
}

.form-item label {
  background: #212c3e;
  display: flex;
  align-items: center;
  height: 80rpx;
  margin-bottom: 40rpx;
  border-radius: 40rpx;
  padding: 0 40rpx;
}

.form-item .iconfont {
  flex-basis: 50rpx;
  align-self: center;
  color: #fff;
}

.form-item .form-control {
  flex: 1;
  color: #fff;
}

.submit-btn {
  width: 540rpx;
  margin: 0 auto;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff784b;
  color: #fff;
}

.submit-btn.button-hover{
  background-color: #f99270;
}
