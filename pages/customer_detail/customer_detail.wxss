@import '../../wxss/font.wxss';

.container {
  background: #f0f0f0;
}

.panel {
  background: #fff;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.panel:first-child {
  margin-top: 0rpx;
}

.info-item {
  border-bottom: 1px solid #d3d3d3;
  display: flex;
  font-size: 28rpx;
}

.no-bottom-border {
  border-bottom: none !important;
}

.item-label {
  height: 100rpx;
  line-height: 100rpx;
  flex-basis: 200rpx;
  color: #aeaeae;
}

.item-value {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  color: #6b6b6b;
}


.info-image-list{
  display: flex;
  padding: 30rpx 0;
  justify-content: flex-start;
  flex-wrap:wrap;
  margin-left: -30rpx;
}

.preview-item{
  display: block;
  width: 210rpx;
  height: 210rpx;
  border: 1px solid #dcdee3;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden; 
  box-sizing:border-box;
}

.preview-item > image{
  width: 100%;
  height: 100%;
}

.edit-btn{
  margin-top:30rpx;
  margin-bottom:30rpx;
  width:690rpx;
}

.delete-btn{
  margin-top:30rpx;
  margin-bottom:30rpx;
  width:690rpx;
}